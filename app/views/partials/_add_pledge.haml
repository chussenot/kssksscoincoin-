.ui.modal.add_pledge
  %i.close.icon
  .header
    Add Pledge
  .ui.form.segment
    .field.fluid
      %label Transaction id (ex: e3ba2ac29c70b3c5183adf0ca4ef9d7578ff0db4d857ffc94a7ca8c105a7fca8)
      %input{placeholder: "Transaction id", type: "text", name: "transaction_id"}/
    .two.fields
      .field
        %label Vout
        %input{placeholder: "Vout", type: "text", name: "vout"}/
      .field
        %label Amount
        %input{placeholder: "Amount", type: "text", name: "pledge_amount"}/
  .actions
    .ui.button Cancel
    .ui.button.request_pledge OK
